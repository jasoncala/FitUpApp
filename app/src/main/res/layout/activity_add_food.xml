<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".AddFoodActivity">

    <Button
        android:id="@+id/btnCreateNewFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Food" />

    <Button
        android:id="@+id/btnAddSavedFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Saved Food" />

    <Button
        android:id="@+id/btnSearchFood"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Search Meals" />

    <Button
        android:id="@+id/btnBackToDiary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Back To Diary" />
</LinearLayout>