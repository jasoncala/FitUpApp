<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_food"/>

    <TextView
        android:id="@+id/tvNewFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Avocado Toast" />

    <TextView
        android:id="@+id/tvNewFoodProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tvNewFoodName"
        app:layout_constraintTop_toBottomOf="@+id/tvNewFoodName"
        tools:text="20g Protein" />

    <TextView
        android:id="@+id/tvNewFoodCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tvNewFoodProtein"
        app:layout_constraintTop_toBottomOf="@+id/tvNewFoodProtein"
        tools:text="10g Carbohydrates" />

    <TextView
        android:id="@+id/tvNewFoodFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tvNewFoodCarbs"
        app:layout_constraintTop_toBottomOf="@+id/tvNewFoodCarbs"
        tools:text="10g Fat" />

    <TextView
        android:id="@+id/tvNewFoodCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        tools:text="300 Calories" />
</androidx.constraintlayout.widget.ConstraintLayout>